<html>
  <title>MyPokemon</title>
  <body>
    <h1>Welcome back <%= @user.username %>!</h1>
    <h4>Add in a new Pokemon <a href="/pokemon/new">here!</a></h4><br>
    <h3>Here Are Your Pokemon</h3>
    <% i = 1 %>
    <% @pokemons.each do |pokemon| %>
    <p><%= "#{i}. #{pokemon.name}" %> <a href="/pokemon/<%= pokemon.id %>">View</a></p>
    <% i += 1 %>
    <% end %>
    <% x = 1 %>
    <h3>Other Trainers</h3>
    <% @users.each do |user| %>
    <p><%= "#{x}. #{user.username}" %> <a href="/user/<%= user.id %>">View</a></p>
    <% x += 1 %>
    <% end %>
    <br>
    <p><a href="/logout">Log Out</a></p>
  </body>
</html>